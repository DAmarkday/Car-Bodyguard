<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="bottom"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f0f2f4"
            android:stretchColumns="0,1,2"

            >
            <View
                android:layout_height="1dip"
                android:layout_width="match_parent"
                android:background="#2fb7b7b7"/>

            <TableRow>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:orientation="vertical"
                    android:id="@+id/fg_item_one"
                    >
                    <ImageView
                        android:id="@+id/history_record_picture"
                        android:layout_gravity="center"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:src="@mipmap/first_page"/>


                    <TextView
                        android:id="@+id/message_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="功能界面"
                        android:textColor="#665f5f"
                        android:textSize="12dp"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:id="@+id/fg_item_two"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/microphone_picture"
                        android:layout_gravity="center"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:src="@mipmap/second_page"/>


                    <TextView
                        android:id="@+id/relative_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车载咨询"
                        android:textColor="#665f5f"
                        android:textSize="12dp"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:id="@+id/fg_item_three"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/user_settings_picture"
                        android:layout_gravity="center"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:src="@mipmap/third_page"/>


                    <TextView
                        android:id="@+id/activity_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="汽车服务"
                        android:textColor="#665f5f"
                        android:textSize="12dp"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>

            </TableRow>

        </TableLayout>

    </LinearLayout>
</LinearLayout>